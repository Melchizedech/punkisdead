<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <% title = 'Punk is Dead' %>
    <% if current_article %>
      <% title += ' - ' + current_article.title %>
      <meta name="twitter:card" content="summary_large_image">
      <meta name="twitter:site" content="@assopunkisdead">
      <meta name="twitter:title" content="<%= current_article.title %>">
      <meta name="twitter:description" content="<%= current_article.data.description %>">
      <meta name="twitter:image" content="https://punkisdead.fr<%= current_page.url + current_article.data.image %>">
    <% end %>

    <title><%= title %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>

    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
  </head>

  <body class="<%= page_classes %>">

    <!-- Header -->
    <nav class="navbar-inverse navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <a class="navbar-brand" href="/">Punk is Dead <small>association promouvant la sc√®ne punk dans les Alpes-Maritimes</small></a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to 'Accueil', '/' %></li>
            <li><%= link_to 'Prochains concerts', '/concerts.html' %></li>
            <li><%= link_to 'Contact', '/contact.html' %></li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <!-- End of Header -->

    <div style="container">
      <!-- Menu -->
        <div id="menu" class="pull-left col-xs-4 col-md-4">
          <div class="pull-right col-md-6">
          <h2>Conseils</h2>
          <%= partial 'conseils' %>

          <h2>Archives</h2>
          <%= partial 'archives' %>

          <h2>Liens</h2>
          <%= partial 'liens' %>
        </div>
      </div>
      <!-- End of menu -->

      <!-- Content -->
      <div id="content" class="col-xs-8 col-md-8">
        <%= yield %>
      </div>
      <!-- End of Content -->
    </div>
  </body>
</html>
