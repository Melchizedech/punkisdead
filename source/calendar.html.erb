---
pageable: true
---
<h1>Archives
  <% case page_type
     when 'day' %>
    du <%= I18n.localize(Date.new(year, month, day), format: '%e %B %Y') %>
  <% when 'month' %>
    de <%= I18n.localize(Date.new(year, month, 1), format: '%B %Y') %>
  <% when 'year' %>
    de <%= year %>
  <% end %>
</h1>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> de <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Page précédente', prev_page %></p>
  <% end %>
<% end %>

<%= summary_for_list_of page_articles %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Page suivante', next_page %></p>
  <% end %>
<% end %>
