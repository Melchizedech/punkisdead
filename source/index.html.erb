---
pageable: true
per_page: 10
title: Punk is Dead Association
---

<!-- Body -->
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> de <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Page précédente', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <h2><%= link_to article.title, article %></h2>
  <p>
    <small><%= article.data.author %>, le <%= I18n.localize(article.date, format: '%a %e %b %R %Y') %></small>
    <%= article.summary(250) %>
  </p>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Page suivante', next_page %></p>
  <% end %>
<% end %>
<!-- End of Body -->
