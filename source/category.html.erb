---
pageable: true
---
<h1>Articles de la catégorie : <%= category.capitalize %></h1>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> de <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Page précedente', prev_page %></p>
  <% end %>
<% end %>

<ul>
  <% page_articles.each_with_index do |article, i| %>
    <li>
      <%= link_to article.title, article %>, <span><%= I18n.localize(article.date, format: '%b %e') %></span>
      <br/><br/>
      <%= article.summary(250) %>
    </li>
  <% end %>
</ul>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Page suivante', next_page %></p>
  <% end %>
<% end %>
